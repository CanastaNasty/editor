html, body
  margin: 0
  height: 100%

.main
  position: relative
  padding-top: 40px
  padding-left: 200px
  box-sizing: border-box
  height: 100%

.editor-wrap
  background-color: white
  width: 100%
  height: 100%
  position: relative

  & > div
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

.filetree
  margin: 0
  padding: 0
  width: 200px
  position: absolute
  left: 0
  top: 40px
  z-index: 2

  li
    list-style-type: none

.actions
  position: absolute
  top: 0
  left: 200px
